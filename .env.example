# Required for production
DATABASE_URL=postgresql://user:password@host:5432/database
SESSION_SECRET=your-secure-random-secret-here
ADMIN_PASSWORD=your-secure-admin-password

# Optional - Port configuration
PORT=5000

# Email notifications (optional)
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# AI Chat feature (optional)
GEMINI_API_KEY=your-gemini-api-key

# Google Calendar integration (optional)
# Base64 encoded JSON string of your Google Cloud Service Account key
GOOGLE_CALENDAR_SERVICE_ACCOUNT=your-base64-encoded-json-key-here

# Object storage (optional)
# For local storage, leave CLOUDINARY_URL blank
PUBLIC_OBJECT_SEARCH_PATHS=.local/storage
PRIVATE_OBJECT_DIR=

# For cloud deployment on Render/Vercel (Persistent Image Storage)
CLOUDINARY_URL=cloudinary://your_api_key:your_api_secret@your_cloud_name
